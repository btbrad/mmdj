/* components/service-preview/service-preview.wxss */
.container {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx 30rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  font-size: 22rpx;
}

.left {
  position: relative;
}

.type-tag {
  padding: 10rpx;
  width: max-content;
  background-color: #333;
  color: #fff;
  opacity: .7;
  font-size: 14rpx;
  z-index: 2;
  position: absolute;
  right: 0;
}

.cover-image {
  width: 190rpx;
  height: 190rpx;
  border-radius: 10rpx;
}

.right {
  width: 100%;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.row {
  display: flex;
  align-items: center;
}

.service-title {
  min-width: 100rpx;
  max-width: 340rpx;
  font-size: 30rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.category {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.publisher {
  display: flex;
  align-items: center;
}

.publisher-avatar-image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.publish-nickname {
  margin-left: 10rpx;
}
.score {
  color: #f20013;
  padding-left: 10rpx;
}

.create-time {
  color: #888;
}

.price {
  font-size: 30rpx;
  color: #f40;
}
.sales {
  color: #333;
  margin-left: 10rpx;
  font-size: 20rxp;
}
.row-last {
  justify-content: space-between;
}