/* pages/home/home.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.tabs {
  display: flex;
  padding: 30rpx 0;
  background-color: #fff;
  align-items: center;
  height: 126rpx;
  box-sizing: border-box;
}
.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tab-label {
  color: #888888;
  white-space: nowrap;
}
.active-tab {
  color: #333333;
  font-weight: bold;
}
.divider {
  width: 50rpx;
  height: 6rpx;
  margin-top: 10rpx;
  background-color: #f3d066;
}
